<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lucazanrosso.welchome.MainActivity"
    android:padding="16dp">

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/alarm_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/alarm_image"/>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/alarm_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/welchome"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:contentDescription="@string/image_description"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/alarm_text"
        app:layout_constraintTop_toBottomOf="@id/alarm_switch"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/alarm_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/alarm_image"/>

</android.support.constraint.ConstraintLayout>
